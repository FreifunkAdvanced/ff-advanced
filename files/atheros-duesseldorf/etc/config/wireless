config wifi-device  wifi0
        option type     atheros
        option channel 3

config wifi-iface
        option device   wifi0
        option mode     adhoc
        option ssid     batman.duesseldorf.freifunk.net
        option bssid    02:CA:FF:EE:BA:BE
        option hidden   1
	option encryption none

config wifi-iface
        option device   wifi0
        option mode     ap
	option network	mesh
        option ssid     www.freifunk-rheinland.net
	option encryption none

