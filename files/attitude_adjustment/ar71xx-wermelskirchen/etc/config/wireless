config wifi-device radio0
	option type	mac80211
	option channel	5
	option phy	phy0
	option txpower	20
	option country	DE
	option hwmode	11ng
	option htmode	HT20
	
config wifi-iface
	option device radio0
	option mode adhoc
	option network adhoc
	option ssid FF-BATBONE
	option bssid 52:CA:FF:EE:BA:BE
	option hidden 0
	option encryption none

config wifi-iface
	option device 'radio0'
	option network 'mesh'
	option mode 'ap'
	option ssid 'freifunk-rheinland.net'
	option encryption 'none'
	option wmm '0'
