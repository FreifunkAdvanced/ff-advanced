config wifi-device radio0
        option type     mac80211
        option channel  3
        option phy      phy0
        option txpower  20
        option country  DE
        option hwmode   11ng
        option htmode   HT20

config wifi-iface
        option device   radio0
        option mode     adhoc
        option network	adhoc
        option ssid     batman.duesseldorf.freifunk.net
        option bssid    02:CA:FF:EE:BA:BE
        option hidden   1
        option encryption none

config wifi-iface
        option device   radio0
        option network 	mesh
        option mode     ap
        option ssid     www.freifunk-rheinland.net
        option encryption none
        option wmm      0
