config wifi-device radio0
        option type     mac80211
        option channel  11
        option phy      phy0
        option txpower  20
        option country  DE
        option hwmode   11ng
        option htmode   HT20

config wifi-iface
        option device   radio0
        option mode	    adhoc
        option network  adhoc
        option ssid	    FFW-BATBONE
        option bssid    B2:CA:FF:EE:BA:BE
        option hidden   1
        option encryption none

config wifi-iface
        option device   radio0
        option network  mesh
        option mode	    ap
        option ssid	    www.freifunk-wuppertal.net
        option encryption none
        option wmm      0

